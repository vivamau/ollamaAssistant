{
  "name": "ollama-assistant-desktop",
  "version": "1.0.0",
  "description": "Ollama Assistant Desktop App",
  "main": "electron/main.js",
  "scripts": {
    "start": "NODE_ENV=production electron .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "dist": "npm run build && npm run download-node && electron-builder",
    "dist:arm64": "npm run build && npm run download-node:arm64 && electron-builder --mac --arm64",
    "dist:x64": "npm run build && npm run download-node:x64 && electron-builder --mac --x64",
    "download-node": "node scripts/download-node.js",
    "download-node:arm64": "node scripts/download-node.js arm64",
    "download-node:x64": "node scripts/download-node.js x64",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "postinstall": "cd backend && npm install && cd ../frontend && npm install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ollama.assistant",
    "files": [
      "electron/**/*",
      "package.json",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/dist",
        "to": "backend/dist"
      },
      {
        "from": "backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "backend/package.json",
        "to": "backend/package.json"
      },
      {
        "from": "backend/data",
        "to": "backend/data",
        "filter": ["**/*"]
      },
      {
        "from": "bundled-node",
        "to": "bundled-node"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "electron/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
